<Window x:Class="Factor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Factor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Topmost="True"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        SourceInitialized="Window_SourceInitialized">
    <Grid>
        <Button Name="ChaosButton" Height="100" Width="100" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel>
                <Image Source="Chaos.jpg" />
                <TextBlock>chaos is a ladder</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
